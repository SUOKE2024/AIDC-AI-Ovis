{
    "name": "索客生活开发指南",
    "version": "1.0.0",
    "description": "索客生活项目的开发标准和指南",
    
    "development_workflow": {
        "planning": {
            "design_tools": ["Figma", "V0"],
            "documentation": ["产品需求文档", "设计规范", "API文档"],
            "review_process": ["设计评审", "技术评审", "AI助手评审"]
        },
        "tool_chain": {
            "ui_prototype": "V0",
            "code_organization": "Claude",
            "development": "Cursor",
            "version_control": "Git"
        }
    },

    "cursor_settings": {
        "editor": {
            "tab_size": 2,
            "insert_spaces": true,
            "format_on_save": true,
            "default_formatter": "dart-format",
            "line_numbers": true,
            "word_wrap": "on",
            "auto_closing_brackets": true
        },
        "ai_features": {
            "code_completion": true,
            "inline_chat": true,
            "command_palette": true,
            "context_awareness": true
        },
        "keyboard_shortcuts": {
            "quick_fix": "cmd+.",
            "format_document": "shift+alt+f",
            "rename_symbol": "f2",
            "go_to_definition": "f12",
            "find_all_references": "shift+f12"
        },
        "git_integration": {
            "enabled": true,
            "show_gutter_changes": true,
            "auto_fetch": true,
            "smart_commit": true
        },
        "terminal": {
            "integrated": true,
            "shell": "/bin/zsh",
            "working_directory": "${workspaceFolder}"
        }
    },

    "flutter_development": {
        "architecture": {
            "pattern": "清洁架构",
            "layers": {
                "presentation": {
                    "widgets": "UI组件",
                    "pages": "页面",
                    "controllers": "使用Riverpod的状态管理"
                },
                "domain": {
                    "entities": "业务实体",
                    "repositories": "仓库接口",
                    "use_cases": "用例"
                },
                "data": {
                    "repositories": "仓库实现",
                    "data_sources": "数据源",
                    "models": "数据模型"
                }
            }
        },
        "state_management": {
            "riverpod": {
                "providers": {
                    "prefer": ["AsyncNotifierProvider", "NotifierProvider"],
                    "avoid": ["StateProvider", "StateNotifierProvider", "ChangeNotifierProvider"]
                },
                "annotations": "使用@riverpod生成providers",
                "updates": "使用ref.invalidate()进行手动更新"
            }
        },
        "code_style": {
            "general": {
                "language": "英文",
                "line_length": 80,
                "trailing_commas": true
            },
            "naming": {
                "files": "蛇形命名法",
                "classes": "帕斯卡命名法",
                "variables": "驼峰命名法",
                "constants": "大写",
                "boolean_vars": "isX, hasX, canX格式"
            },
            "functions": {
                "max_length": "20条指令",
                "naming": "动词+名词",
                "parameters": "多参数使用对象",
                "return": "优先使用不可变对象"
            }
        },
        "widgets": {
            "principles": {
                "composition": "优先使用组合而非继承",
                "immutability": "使用const构造函数",
                "state": "优先使用无状态组件"
            },
            "best_practices": {
                "size": "保持组件小而专注",
                "nesting": "避免深层嵌套",
                "reusability": "创建可重用组件",
                "performance": "尽可能使用const"
            }
        }
    },

    "version_control": {
        "git": {
            "workflow": {
                "branching": {
                    "main": "生产环境分支",
                    "develop": "开发环境分支",
                    "feature": "feature/* 功能分支",
                    "release": "release/* 发布分支",
                    "hotfix": "hotfix/* 紧急修复分支"
                },
                "commits": {
                    "style": "约定式提交",
                    "format": "<类型>(<范围>): <描述>",
                    "types": [
                        "feat", "fix", "docs", "style", 
                        "refactor", "test", "chore", "ci"
                    ]
                }
            },
            "hooks": {
                "pre_commit": [
                    "代码格式化",
                    "Lint检查",
                    "类型检查"
                ],
                "pre_push": [
                    "单元测试",
                    "构建检查"
                ]
            }
        },
        "releases": {
            "versioning": "语义化版本",
            "changelog": "自动生成变更日志",
            "tags": "版本标签管理"
        }
    },

    "ci_cd": {
        "pipelines": {
            "development": {
                "triggers": ["推送到develop", "向develop提交PR"],
                "steps": [
                    "代码检查",
                    "单元测试",
                    "构建",
                    "部署到开发环境"
                ]
            },
            "staging": {
                "triggers": ["推送到release/*"],
                "steps": [
                    "代码检查",
                    "全套测试",
                    "构建",
                    "部署到预发布环境",
                    "自动化测试"
                ]
            },
            "production": {
                "triggers": ["推送到main"],
                "steps": [
                    "代码检查",
                    "全套测试",
                    "构建",
                    "部署到生产环境",
                    "健康检查"
                ]
            }
        },
        "environments": {
            "development": {
                "auto_deploy": true,
                "monitoring": "基本监控"
            },
            "staging": {
                "auto_deploy": true,
                "monitoring": "完整监控",
                "rollback": "自动回滚"
            },
            "production": {
                "auto_deploy": false,
                "approval": "需要手动审批",
                "monitoring": "完整监控",
                "rollback": "手动回滚"
            }
        }
    },

